                    <label for="floatingSelect">Modelo Atraves de Ano</label>
                </div>

                <button type="button" class="btn btn-outline-primary" style=" margin-top: 25px;">Primary</button>
            </div>
        </div>
  </div>

    
        
</body>
</html>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>

    

    function carregarMarcas() {
        $.ajax({
            url: '/Veiculos/Getmarca',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                // Limpar o ComboBox
                $("#SltMarcas").empty();

                // Preencher o ComboBox com os novos dados
                $.each(data, function (index, item) {
                    $("#SltMarcas").append('<option value="' + item.value + '">' + item.Label + '</option>');
                });
            },
            error: function (ex) {
                console.log('Erro ao obter dados para ComboBox: ' + ex);
            }
        });
    }

    // Evento que aciona a chamada Ajax quando necessário, por exemplo, ao carregar a página
    $(document).ready(function () {
        $("#SltMarcas").click(carregarMarcas);
    });

    carregarMarcas();

</script>